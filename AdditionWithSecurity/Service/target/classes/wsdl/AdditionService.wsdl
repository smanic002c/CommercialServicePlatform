    <wsdl:operation name="add">
      <soap:operation soapAction="http://www.comcast.com/addition/services/add"/>
      <wsdl:input>
        <soap:body use="literal"/>
      </wsdl:input>
      <wsdl:output>
        <soap:body use="literal"/>
      </wsdl:output>
    </wsdl:operation>
  </wsdl:binding>
  
  <wsdl:service name="AdditionService">
    <wsdl:port binding="tns:AdditionServiceSOAP" name="AdditionServiceSOAP">
      <soap:address location="http://www.comcast.com"/>
    </wsdl:port>
  </wsdl:service>
  
</wsdl:definitions>
